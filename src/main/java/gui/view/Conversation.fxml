<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.StackPane?>
<?import gui.customui.ConversationLayerChooser?>

<TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"  fx:id="tabPane">
	<tabs>
		<Tab text="Basic properties">
			<content>
				<VBox spacing="2.0">
					<children>
						<CheckBox fx:id="editConversationEnabledCB"
							mnemonicParsing="false" text="Conversation enabled?" />
						<fx:include source="NamedObject.fxml" />
						<Label text="Greeting" />
						<TextArea fx:id="editGreetingTA" prefHeight="100.0"
							wrapText="true" />
						<Label text="Event" />
						<TextArea fx:id="editEventTA" prefHeight="100.0"
							wrapText="true" />
						<Label text="Start layer" />
						<ConversationLayerChooser fx:id="startLayerChooser" />
						<Button fx:id="removeButton" mnemonicParsing="false"
							text="Delete this conversation" />
					</children>
					<padding>
						<Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
					</padding>
				</VBox>
			</content>
		</Tab>
		<Tab text="Layers">
			<content>
				<BorderPane>
					<center>
						<TableView fx:id="table">
							<columns>
								<TableColumn fx:id="idCol" prefWidth="75.0" text="ID" />
								<TableColumn fx:id="nameCol" prefWidth="100.0" text="Name" />
							</columns>
						</TableView>
					</center>
					<right>
						<VBox prefWidth="200.0" spacing="2.0">
							<children>
								<Label text="Name" />
								<TextField fx:id="newNameTF" />
								<Button fx:id="saveButton" mnemonicParsing="false" text="Save" />
							</children>
							<padding>
								<Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
							</padding>
						</VBox>
					</right>
					<bottom>
						<HBox spacing="10.0">
							<Label text="Filter:" />
							<TextField fx:id="filterTF" />
							<padding>
								<Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
							</padding>
						</HBox>
					</bottom>
				</BorderPane>
			</content>
		</Tab>
	</tabs>
</TabPane>
