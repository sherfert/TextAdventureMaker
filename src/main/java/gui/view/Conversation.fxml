<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.StackPane?>

<TabPane prefHeight="500.0" prefWidth="400.0" tabClosingPolicy="UNAVAILABLE"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<tabs>
		<Tab text="Basic properties">
			<content>
				<VBox prefHeight="200.0" prefWidth="100.0" spacing="2.0">
					<children>
						<CheckBox fx:id="editConversationEnabledCB"
							mnemonicParsing="false" text="Conversation enabled?" />
                  		<fx:include source="NamedObject.fxml" />
						<Label text="Greeting" />
						<TextArea fx:id="editGreetingTA" prefHeight="100.0" wrapText="true" />
						<Label text="Event" />
						<TextArea fx:id="editEventTA" prefHeight="100.0" wrapText="true" />
						<Button fx:id="removeButton" minWidth="-Infinity"
							mnemonicParsing="false" text="Delete this conversation" />
					</children>
					<padding>
						<Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
					</padding>
				</VBox>
			</content>
		</Tab>
	</tabs>
</TabPane>
