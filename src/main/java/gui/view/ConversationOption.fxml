<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import gui.customui.ConversationLayerChooser?>
<?import gui.customui.ActionListView?>

<VBox spacing="2.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<fx:include source="NamedObject.fxml" />
		<CheckBox fx:id="editEnabledCB" mnemonicParsing="false"
			text="Option enabled?" />
		<CheckBox fx:id="editRemoveOptionEnabledCB" mnemonicParsing="false"
			text="Remove the option from the layer after choosing it?" />
		<Label text="Text" />
		<TextField fx:id="editTextTF" />
		<Label text="Answer" />
		<TextArea fx:id="editAnswerTA" prefHeight="100.0" wrapText="true" />
		<Label text="Event" />
		<TextArea fx:id="editEventTA" prefHeight="100.0" wrapText="true" />
		<Label text="Target layer" />
		<ConversationLayerChooser fx:id="targetChooser" />
		<Label text="Actions triggered when chosen" />
		<ActionListView fx:id="actionsListView" />
		<Button fx:id="removeButton" mnemonicParsing="false" text="Delete this option" />
	</children>
	<padding>
		<Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
	</padding>
</VBox>